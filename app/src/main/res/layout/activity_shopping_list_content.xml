<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShoppingListContentActivity">
    <ListView
        android:id="@+id/shoppingListContentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

    <Button
        android:id="@+id/goToCartBtn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/goToShoppingCart"
        android:layout_alignParentRight="true"
        style="@style/btnTextDesign"
        android:background="@drawable/btn_color"

        />
    <Button
        android:id="@+id/editListBtn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/editList"
        android:layout_alignParentLeft="true"
        style="@style/btnTextDesign"
        android:background="@drawable/btn_color"
        /></LinearLayout>
</RelativeLayout>